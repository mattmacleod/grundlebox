- if @assets.blank? && params[:page].blank? && !params[:q].blank?
	=note "No images found"
	
- @assets.each do |asset|
	.icon{:class=>cycle(:first, "", "", "", :last)}
		=image_tag( asset.asset.url(:thumb) )
		.label
			%strong= asset.title
			%em
				=link_to "Show", asset.asset.url(:original), :class => :asset_show, :rel => "prettyPhoto", :title => asset.title
				=link_to "Edit", edit_admin_asset_path(asset), :class => :asset_edit, :title => "Edit asset"
				=link_to "Delete", admin_asset_path(asset), :method=>:delete, :confirm=>"Are you sure? This asset will be removed from any items it is currently associated with.", :class => :asset_delete, :title => "Delete asset"
			.clear
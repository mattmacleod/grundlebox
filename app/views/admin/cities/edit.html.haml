=labelled_form_for [:admin, @city] do |f|
	
	#content_body.content_body

		- @page_title = "#{@city.name} | City Manager"
		%h1 
			City:
			=@city.name
		=flash_message
		
		=note "Edit the city's details using the form below"
		
		=render :partial=>"form", :locals=>{:f=>f}
		
	#content_sidebar
		=render :partial => "sidebar", :locals => {:f => f}
- if @city
	.box
		%h2 Actions
		%fieldset.buttons
			=link_to "Cancel", admin_cities_path, :class=>"button cancel"
			- unless @city.new_record?
				=link_to "Delete this city", admin_city_path(:id => @city.id), :method => :delete, :confirm => "Are you sure you want to delete this city?", :class=>"button delete"
			=f.submit "Save this city", :class=>"button save bottom"
- if !@city || !@city.new_record?
	.box
		%h2 Tools
		= link_to "New city", new_admin_city_path, :class => "button new bottom"

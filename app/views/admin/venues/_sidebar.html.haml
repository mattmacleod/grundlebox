- if @venue
	.box
		%h2 Actions
		%fieldset.buttons
			=link_to "Cancel", admin_venues_path, :class=>"button cancel"
			- unless @venue.new_record?
				=link_to "Delete this venue", admin_venue_path(:id => @venue.id), :method => :delete, :confirm => "Are you sure you want to delete this venue?", :class=>"button delete"
			=f.submit "Save this venue", :class=>"button save bottom"
- if !@venue || !@venue.new_record?
	.box
		%h2 Tools
		= link_to "New venue", new_admin_venue_path, :class => "button new bottom"

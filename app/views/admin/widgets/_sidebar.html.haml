- if @widget
	.box
		%h2 Actions
		%fieldset.buttons
			=link_to "Cancel", admin_widgets_path, :class=>"button cancel"
			- unless @widget.new_record?
				=link_to "Delete this widget", admin_widget_path(:id => @widget.id), :method => :delete, :confirm => "Are you sure you want to delete this widget?", :class=>"button delete"
			=f.submit "Save this widget", :class=>"button save bottom"

- if !@widget || !@widget.new_record?
	.box
		%h2 Tools
		= link_to "New widget", new_admin_widget_path, :class => "button new"

= note "Choose the options for the video page"

= f.fields_for :properties do |ff|
	.full= ff.tag_select :videos_tags, :label => "Show videos tagged with:", :required => true, :popular => false
	.full
		.quarter= ff.check_box :videos_all_tags, :label => "Require all tags?", :note => "Check to only show videos matching all tags. Otherwise, will show galleries matching any tag."
		.quarter= ff.text_field :videos_items_per_page, :label => "Items per page", :note => "Enter the number of videos to be displayed on each page", :maxlength => 3, :cols => 5
		.half= ff.select :videos_sort_order, Grundlebox::Config::PageSortOrder.map{|k,v|[v,k]}, :label => "Default sort order"
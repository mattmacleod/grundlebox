= note "Choose the options for venues to be displayed on this page"

= f.fields_for :properties do |ff|
	.full= ff.tag_select :venues_tags, :label => "Show venues with these tags:", :required => true, :popular => false
	.full= ff.check_box :venues_all_tags, :label => "Require all tags?", :note => "Check to only show venues matching all tags. Otherwise, will show venues matching any tag."
	.full= ff.select :venues_cities, City::options_for_select, :label => "Cities", :required => false, :note => "Show only venues in the selected cities", :html_options => { :multiple => true}
	.full
		.quarter= ff.text_field :venues_items_per_page, :label => "Items per page", :note => "Enter the number of venues to be displayed on each page", :maxlength => 3, :cols => 5
		.half= ff.select :venues_sort_order, Grundlebox::Config::PageSortOrder.map{|k,v|[v,k]}, :label => "Default sort order"
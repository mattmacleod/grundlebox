- if @page
	.box
		%h2 Actions
		%fieldset.buttons
			=link_to "Cancel", admin_pages_path, :class=>"button cancel"
			- unless @page.new_record?
				=link_to "Delete this page", admin_page_path(:id => @page.id), :method => :delete, :confirm => "Are you sure you want to delete this page?", :class=>"button delete"
			=f.submit "Save this page", :class=>"button save bottom"
			
- if !@page || !@page.new_record?
	.box
		%h2 Tools
		= link_to "New page", new_admin_page_path, :class => "button new bottom"

- if @comment
	.box
		%h2 Actions
		%fieldset.buttons
			=link_to "Cancel", admin_comments_path, :class=>"button cancel"
			- unless @comment.new_record?
				=link_to "Delete this comment", admin_comment_path(:id => @comment.id), :method => :delete, :confirm => "Are you sure you want to delete this comment?", :class=>"button delete"
			=f.submit "Save this comment", :class=>"button save"